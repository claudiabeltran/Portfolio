Raw
 script.js
function seven(){
    document.getElementById
        ("num").value += 7;
    
}

function eight(){
    document.getElementById
        ("num").value += 8;
    
}

function nine(){
    document.getElementById
        ("num").value += 9;
    
}

function add(){
    document.getElementById
        ("num").value += "+";
    
}
function four(){
    document.getElementById
        ("num").value += 4;
    
}
function five(){
    document.getElementById
        ("num").value += 5;
    
}
function six(){
    document.getElementById
        ("num").value += 6;
    
}
function minus(){
    document.getElementById
        ("num").value += "-";
    
}
function three(){
    document.getElementById
        ("num").value += 3;
    
}
function two(){
    document.getElementById
        ("num").value += 2;
    
}
function one(){
    document.getElementById
        ("num").value += 1;
    
}
function multiply(){
    document.getElementById
        ("num").value += "*";
    
}
function zero(){
    document.getElementById
        ("num").value += 0;
    
}
function point(){
    document.getElementById
        ("num").value += ".";
    
}
function erase(){
    document.getElementById
        ("num").value = "";
    
}
function divide(){
    document.getElementById
        ("num").value += "/";
    
}
function equals(){
    document.getElementById
        ("num").value = eval
        (document
        .getElementById("num").value);
    
}
